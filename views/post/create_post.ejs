<%- include('../partials/header'); -%>
  <div class="container d-flex align-items-center" style="height: 100vh;">
    <form class="row g-3" action="/post/" method="POST">
      <div class="col-md-6">
        <label for="job_title" class="form-label">Job Title</label>
        <input type="text" class="form-control" id="job_title" name="job_title">
      </div>
      <div class="col-md-6">
        <label for="company_name" class="form-label">Company Name</label>
        <input type="text" class="form-control" id="company_name" name="company_name">
      </div>
      <div class="col-md-6">
        <label for="Salary" class="form-label">Salary</label>
        <input type="number" class="form-control" id="Salary" name="Salary">
      </div>
      <div class="col-md-6">
        <label for="deadline" class="form-label">Deadline</label>
        <input type="date" class="form-control" id="deadline" name="deadline">
      </div>
      <div class="col-md-8">
        <label for="location" class="form-label">Location</label>
        <input type="text" class="form-control" id="location" name="location">
      </div>
      <div class="col-md-4">
        <label for="allowed_branches" class="form-label">Allowed Branch</label>
        <div class="dropdown">
          <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="allowed_branches"
            data-bs-toggle="dropdown" aria-expanded="false">
            Branches
          </button>
          <ul class="dropdown-menu" aria-labelledby="allowed_branches">
            <li>
              <div class="form-check" style="padding-left: 2em;">
                <input class="form-check-input" type="checkbox" value="CSE" id="CSE" name="allowed_branches">
                <label class="form-check-label" for="CSE">
                  CSE
                </label>
              </div>
            </li>
            <li>
              <div class="form-check" style="padding-left: 2em;">
                <input class="form-check-input" type="checkbox" value="ISE" id="ISE" name="allowed_branches">
                <label class="form-check-label" for="ISE">
                  ISE
                </label>
              </div>
            </li>
            <li>
              <div class="form-check" style="padding-left: 2em;">
                <input class="form-check-input" type="checkbox" value="Mech" id="Mech" name="allowed_branches">
                <label class="form-check-label" for="Mech">
                  Mech
                </label>
              </div>
            </li>
            <li>
              <div class="form-check" style="padding-left: 2em;">
                <input class="form-check-input" type="checkbox" value="Civil" id="Civil" name="allowed_branches">
                <label class="form-check-label" for="Civil">
                  Civil
                </label>
              </div>
            </li>
          </ul>
        </div>
      </div>
      <div class="col-md-4">
        <label for="job_type" class="form-label">Job Type</label>
        <select id="job_type" class="form-select" name="job_type">
          <option disabled selected>Select Job Type</option>
          <option value="Internship">Internship</option>
          <option value="Permanent">Permanent</option>
        </select>
      </div>
      <div class="col-md-4">
        <label for="min_cgpa" class="form-label">Min CGPA</label>
        <input type="number" class="form-control" id="min_cgpa" name="min_cgpa" min="0.0" max="10.0" step="0.01">
      </div>
      <div class="col-md-12">
        <label for="job_description" class="form-label">Job Description</label>
        <input type="text" class="form-control" id="job_description" name="job_description">
      </div>
      <div class="col-12">
        <button type="submit" class="btn btn-primary">Create Post</button>
      </div>
    </form>
  </div>

  <%- include('../partials/footer'); -%>