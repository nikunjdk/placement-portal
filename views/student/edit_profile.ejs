<%- include('../partials/header'); -%>
  <div class="container d-flex align-items-center" style="height: 100vh;">
    <form class="row g-3" action="/student/<%= student.usn %>?_method=PUT" method="POST">
      <div class="col-md-12">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= student.name %>">
      </div>
      <div class="col-md-8">
        <label for="email_id" class="form-label">Email</label>
        <input type="email" class="form-control" id="email_id" name="email_id" value="<%= student.email_id %>">
      </div>
      <div class="col-md-4">
        <label for="status" class="form-label">Status</label>
        <select id="status" class="form-select" name="status">
          <option disabled selected>Select Your Status</option>
          <option value="true">Placed</option>
          <option value="false">Not Placed</option>
        </select>
      </div>
      <div class="col-md-8">
        <label for="contact_number" class="form-label">Contact Number</label>
        <input type="text" class="form-control" id="contact_number" name="contact_number"
          value="<%= student.contact_number %>">
      </div>
      <div class="col-md-4">
        <label for="cgpa" class="form-label">CGPA</label>
        <input type="number" class="form-control" id="cgpa" name="cgpa" min="0.0" max="10.0" step="0.01"
          value="<%= student.cgpa %>">
      </div>
      <div class="col-md-12">
        <label for="resume_url" class="form-label">Resume Url</label>
        <input type="url" class="form-control" id="resume_url" name="resume_url" value="<%= student.resume_url %>">
      </div>
      <div class="col-12">
        <button type="submit" class="btn btn-primary">Edit</button>
      </div>
    </form>
  </div>
  <%- include('../partials/footer'); -%>