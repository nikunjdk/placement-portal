<%- include('../partials/header'); -%>
    <div class="container d-flex flex-column justify-content-around align-items-center min-vh-100">
        <div>
            <form action="/post/showAll" method="post">
                <button class="btn btn-outline-success" type="submit">
                    Show All Posts
                </button>
            </form>
        </div>
        <div>
            <form class="row g-3" action="/post/filter" method="post">
                <div class="col-md-4">
                    <label for="allowed_branches" class="form-label">allowed_branches</label>
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="allowed_branches"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            Allowed Branches
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="allowed_branches">
                            <li>
                                <div class="form-check" style="padding-left: 2em;">
                                    <input class="form-check-input" type="checkbox" value="CSE" id="CSE"
                                        name="allowed_branches">
                                    <label class="form-check-label" for="CSE">
                                        CSE
                                    </label>
                                </div>
                            </li>
                            <li>
                                <div class="form-check" style="padding-left: 2em;">
                                    <input class="form-check-input" type="checkbox" value="ISE" id="ISE"
                                        name="allowed_branches">
                                    <label class="form-check-label" for="ISE">
                                        ISE
                                    </label>
                                </div>
                            </li>
                            <li>
                                <div class="form-check" style="padding-left: 2em;">
                                    <input class="form-check-input" type="checkbox" value="Mech" id="Mech"
                                        name="allowed_branches">
                                    <label class="form-check-label" for="Mech">
                                        Mech
                                    </label>
                                </div>
                            </li>
                            <li>
                                <div class="form-check" style="padding-left: 2em;">
                                    <input class="form-check-input" type="checkbox" value="Civil" id="Civil"
                                        name="allowed_branches">
                                    <label class="form-check-label" for="Civil">
                                        Civil
                                    </label>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4">
                    <label for="job_type" class="form-label">Job Type</label>
                    <select id="job_type" class="form-select" name="job_type">
                        <option disabled selected>Select Job Type</option>
                        <option value="Permanent">Permanent</option>
                        <option value="Internship">Internship</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="status" class="form-label">Status</label>
                    <select id="status" class="form-select" name="status">
                        <option disabled selected>Select status</option>
                        <option value="true">Active</option>
                        <option value="false">Not Active</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="min_cgpa" class="form-label">Min CGPA</label>
                    <input type="number" class="form-control" id="min_cgpa" name="min_cgpa" min="0.0" max="10.0"
                        step="0.01">
                </div>
                <div class="col-md-4">
                    <label for="Salary" class="form-label">Min Salary</label>
                    <input type="number" class="form-control" id="Salary" name="Salary">
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Search Posts</button>
                </div>
            </form>
        </div>
    </div>
    <%- include('../partials/footer'); -%>